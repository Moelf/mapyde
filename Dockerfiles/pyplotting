FROM atlasamglab/stats-base:root6.22.02-python3.8

USER root
WORKDIR /home

SHELL ["/bin/bash", "-c"]

RUN DEBIAN_FRONTEND=noninteractive apt-get -qq -y install --no-install-recommends \
    python3-tk \
    tk

RUN python3 -m pip install --no-cache-dir -U pip wheel setuptools && \
    python3 -m pip install --no-cache-dir pandas matplotlib numpy

ENTRYPOINT ["/bin/bash", "-l", "-c"]
CMD [ "/bin/bash" ]
