ARG BUILDER_IMAGE=atlasamglab/root-base
FROM ${BUILDER_IMAGE} as builder

USER root
WORKDIR /home

SHELL ["/bin/bash", "-c"]

RUN python3 -m pip install --no-cache-dir -U pip wheel setuptools && \
    python3 -m pip install --no-cache-dir pandas matplotlib numpy

ENTRYPOINT ["/bin/bash", "-l", "-c"]
CMD [ "/bin/bash" ]
